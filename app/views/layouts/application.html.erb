<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="Bookers" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/08825e6098.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

 <body>
    <header>
       <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
            <span class="navbar-brand"><%= link_to "Bookers", root_path %></span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
            </button>
       <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-link text-light">
                <%= link_to user_path(current_user), class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-home" aria-hidden="true"><i class="fas fa-home"></i>Home</span>
                <% end %>
              </li>
              <li class="nav-link text-light">
                <%= link_to users_path, class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-user" aria-hidden="true"><i class="fas fa-users"></i> Users</span>
                <% end %>
              </li>
              <li class="nav-link text-light">
                <%= link_to books_path, class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-book" aria-hidden="true"><i class="fas fa-book-open"></i> Books</span>
                <% end %>
              </li>
              <li class="nav-link text-light">
                <%= link_to destroy_user_session_path, method: :delete, class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-log-out" aria-hidden="true"><i class="fas fa-sign-out-alt"></i> Log out</span>
                <% end %>
              </li>
            <% else %>
              <li class="nav-link text-light">
                <%= link_to root_path, class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-home" aria-hidden="true"><i class="fas fa-home"></i>Home</span>
                <% end %>
              </li>
              <li class="nav-link text-light">
                <%= link_to home_about_path, class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-link" aria-hidden="true"><i class="fas fa-link"></i> About</span>
                <% end %>
              </li>
              <li class="nav-link text-light">
                <%= link_to new_user_registration_path, class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-edit" aria-hidden="true"><i class="fas fa-user-plus"></i> Sign up</span>
                <% end %>
              </li>
              <li class="nav-link text-light">
                <%= link_to new_user_session_path, class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"><i class="fas fa-sign-in-alt"></i> Log in</span>
                <% end %>
              </li>
            <% end %>
          </ul>
         </div>
        </nav>
      </div>
    </header>
    <div class="body">
      <p class="notice"><%= notice %></p>
      <div class='container'>
      <%= yield %>

        <footer>
           <div class='container mt-5'>
  	         <div class='row'>
    	         <div class='mx-auto'>
    		         <p>CopyRight Infratop.inc</p>
    	         </div>
            </div>
           </div>
        </footer>
      </div>
    </div>
  </body>
</html>